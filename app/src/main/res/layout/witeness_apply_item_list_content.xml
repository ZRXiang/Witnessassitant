<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/object_name"
            style="@style/Weight1_Content"
            android:layout_margin="@dimen/text_margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/sample_id"
            style="@style/Weight2_Content"
            android:layout_margin="@dimen/text_margin_small"
            android:layout_below="@id/object_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/apply_time"
            android:layout_margin="@dimen/text_margin_small"
            android:layout_below="@id/org_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/org_name"
            android:layout_margin="@dimen/text_margin_small"
            android:layout_below="@id/sample_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
       <!-- <TextView
            android:id="@+id/username"
            android:layout_margin="@dimen/text_margin_small"
            android:layout_below="@id/org_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->
    </RelativeLayout>
</LinearLayout>